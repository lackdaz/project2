<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Locavorus</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css" type="text/css">
        <link rel="stylesheet" href="/css/style.css" type='text/css'>
        <link rel="icon" href="favicon.ico" sizes="32x32" type="image/png">
    </head>
    <body>

        <header class="top">
            <div class="header-logo">

                <div class="img">
                    <a href="/"><img src="/images/locavorus.png" alt="locavorus.png"></a>
                </div>
                <div class="word">
                    <a href="/">
                        <span class="header-name">LOCAVORUS</span>
                    </a>
                </div>

            </div>
            <div class="header-search">
                <div></div>
                <form class="search-form" action="/business" method="POST">
                    <input type="text" name="search" placeholder="Find a restaurant">
                    <button type="submit">Search</button>
                </form>
                <div></div>
            </div>
            <div class="header-nav">
                <% if (!currentUser) { %>
                    <% include partials/login %>
                <% } else if (!currentUser.business) { %>
                    <% include partials/account %>
                <% } else { %>
                    <% include partials/dashboard %>
                    <% include partials/account %>
                <% } %>
            </div>
        </header>
        <div class="content">
            <% include partials/alerts %>

            <%- body %>
        </div>
    </body>
</html>
